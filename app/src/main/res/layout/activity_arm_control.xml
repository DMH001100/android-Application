<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/white">

        <Button
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="返回主控制"
            android:layout_gravity="start"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="机械臂控制"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginVertical="20dp"/>

        <!-- 机械臂控制按钮 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn24l"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:text="左转" />

            <Button
                android:id="@+id/btn24r"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:text="右转" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btn16u"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="关节1上移"
                android:layout_margin="8dp"/>

            <Button
                android:id="@+id/btn16d"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="关节1下移"
                android:layout_margin="8dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btn18u"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="关节2上移"
                android:layout_margin="8dp"/>

            <Button
                android:id="@+id/btn18d"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="关节2下移"
                android:layout_margin="8dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btn26u"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="关节3上移"
                android:layout_margin="8dp"/>

            <Button
                android:id="@+id/btn26d"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="关节3下移"
                android:layout_margin="8dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btn3u"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="探测头上移"
                android:layout_margin="8dp"/>

            <Button
                android:id="@+id/btn3d"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="探测头下移"
                android:layout_margin="8dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btn1u"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="探测头顺时针"
                android:layout_margin="8dp"/>

            <Button
                android:id="@+id/btn1d"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="探测头逆时针"
                android:layout_margin="8dp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>